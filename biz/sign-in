    <script>
      new Vue({
        el: '#login-form',
        data:{
          email: '',
          password: '',
          disabled: false,
          showError: false,
          error: ''    
        },
        methods:{
          login: function(e) {
            e.preventDefault();
            this.disabled = true;
           auth.signInWithEmailAndPassword(this.email, this.password).then(() => {
           console.log('success login');
           window.location.href = '/store/dashboard';
            }).catch((error) => {
              this.showError = true;
              this.disabled = false;
              this.error = error;       
            });
          }
        }
      });
         
    </script>
